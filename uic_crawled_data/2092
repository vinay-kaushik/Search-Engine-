<tr class="even"><td class="codecol"><a href="/search/?P=CHEM%20123" title="CHEM 123" class="bubblelink code" onclick="return showCourse(this, 'CHEM 123');">CHEM 123</a></td><td>General Chemistry Laboratory I</td><td class="hourscol">1</td></tr>
<tr class="odd"><td class="codecol"><a href="/search/?P=CS%20109" title="CS 109" class="bubblelink code" onclick="return showCourse(this, 'CS 109');">CS 109</a></td><td>Programming for Engineers with MatLab</td><td class="hourscol">3</td></tr>
<tr class="even"><td class="codecol"><a href="/search/?P=MATH%20180" title="MATH 180" class="bubblelink code" onclick="return showCourse(this, 'MATH 180');">MATH 180</a></td><td>Calculus I</td><td class="hourscol">4</td></tr>
<tr class="odd"><td class="codecol"><a href="/search/?P=MATH%20181" title="MATH 181" class="bubblelink code" onclick="return showCourse(this, 'MATH 181');">MATH 181</a></td><td>Calculus II</td><td class="hourscol">4</td></tr>
<tr class="even"><td class="codecol"><a href="/search/?P=MATH%20210" title="MATH 210" class="bubblelink code" onclick="return showCourse(this, 'MATH 210');">MATH 210</a></td><td>Calculus III</td><td class="hourscol">3</td></tr>
